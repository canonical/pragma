{
  "cli": {
    "packageManager": "bun"
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "build:storybook": {
      "dependsOn": ["^build:storybook"],
      "cache": true
    },
    "check": {
      "dependsOn": ["^check"],
      "cache": true
    },
    "check:fix": {
      "dependsOn": ["^check:fix"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": true
    }
  }
}
