{
  "name": "@canonical/react-boilerplate-vite",
  "private": true,
  "version": "0.13.0-experimental.0",
  "type": "module",
  "license": "GPL-3.0-only",
  "scripts": {
    "dev": "vite",
    "build": "bun run build:client && bun run build:server",
    "build:all": "bun run build:client && bun run build:server && bun run build:storybook",
    "build:storybook": "storybook build",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "bun run build:server:middleware",
    "build:server:middleware": "vite build --ssr src/ssr/server.ts --outDir dist/server",
    "build:server:cli": "vite build --ssr src/ssr/renderer.tsx --outDir dist/server",
    "serve": "bun run serve:middleware",
    "serve:middleware": "bun run build:client && bun run build:server:middleware && node dist/server/server.js",
    "serve:cli": "bun run build:client && bun run build:server:cli && bun run serve-express dist/server/renderer.js",
    "check": "bun run check:biome && bun run check:ts",
    "check:fix": "bun run check:biome:fix && bun run check:ts",
    "check:biome": "biome check",
    "check:biome:fix": "biome check --write",
    "check:ts": "tsc --noEmit",
    "storybook": "storybook dev -p 6010 --no-open --host 0.0.0.0"
  },
  "dependencies": {
    "@canonical/react-ds-global": "^0.13.0-experimental.0",
    "@canonical/react-ssr": "^0.12.0",
    "@canonical/storybook-config": "^0.13.0-experimental.0",
    "@canonical/styles": "^0.12.0",
    "express": "^5.2.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@canonical/biome-config": "^0.12.0",
    "@canonical/typescript-config-react": "^0.12.0",
    "@chromatic-com/storybook": "^5.0.1",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.13",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "globals": "^17.3.0",
    "@storybook/react-vite": "^10.2.8",
    "storybook": "^10.2.8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vite-tsconfig-paths": "^6.1.0"
  }
}
