  "bugs": {
    "url": "https://github.com/canonical/ds25/issues"
  },
  "homepage": "https://github.com/canonical/ds25#readme",
  "scripts": {
    "build": "bun run build:dimensions && bun run build:colors",
    "build:all": "bun run build:dimensions && bun run build:colors",
    "build:dimensions": "bun run build.dimensions.ts",
    "build:colors": "bun run build.colors.ts",
    "check": "bun run check:biome",
    "check:fix": "bun run check:biome:fix",
    "check:biome": "biome check src *.json *.js",
    "check:biome:fix": "biome check --write src *.json *.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@canonical/biome-config": "^0.9.0",
    "style-dictionary": "^4.3.3",
