csoi:ComponentPropsInterface a cso:CodeStandard ;
    cso:name "component/architecture/props-interface" ;
    cso:hasCategory csoi:ComponentCategory ;
    cso:description """
## Component Props Interface
Define clear, well-documented interfaces for component props.
""" ;
    cso:dos """
### Do:
- Export props interface
- Document complex props with JSDoc
- Use optional chaining for optional props
- Provide sensible defaults
""" ;
    cso:donts """
### Don't:
- Don't use inline type definitions
- Don't pass entire objects when only specific fields are needed
- Don't mutate props
""" .

csoi:ComponentComposition a cso:CodeStandard ;
    cso:name "component/architecture/composition" ;
    cso:hasCategory csoi:ComponentCategory ;
    cso:description """
## Component Composition
Favor composition over complex conditional rendering.
""" ;
    cso:dos """
### Do:
- Break down complex components into smaller pieces
- Use children and render props patterns
- Create subcomponents for repeated elements
""" ;
    cso:donts """
### Don't:
- Don't create monolithic components
- Don't nest ternary operators deeply
- Don't repeat JSX blocks
""" .