###############################################################################
# CODE STANDARDS - REACT COMPONENT STANDARDS
###############################################################################

csoi:ReactComponentFolderStructure a cso:CodeStandard ;
    cso:name "react/component/folder-structure" ;
    cso:hasCategory csoi:ReactCategory ;
    cso:description """
## Component Folder Structure
Each component should be organized in its own folder with related files grouped together.
The folder should contain the component implementation, styles, tests, and type definitions.
""" ;
    cso:dos """
### Do:
- Create a folder named after the component (e.g., `SupportCaseCard/`)
- Include an `index.ts` file for exports
- Keep component file as `SupportCaseCard.tsx`
- Place styles in `styles.css` or `SupportCaseCard.module.css`
- Include tests in `SupportCaseCard.test.tsx`
- Add types in `types.ts` if complex
""" ;
    cso:donts """
### Don't:
- Don't scatter component files across multiple directories
- Don't use generic names like `component.tsx`
- Don't mix component files with unrelated code
- Don't forget the index file for clean imports
""" .

csoi:ReactFunctionalComponents a cso:CodeStandard ;
    cso:name "react/component/functional-components" ;
    cso:hasCategory csoi:ReactCategory ;
    cso:description """
## Use Functional Components
Always use functional components with hooks instead of class components for new code.
""" ;
    cso:dos """
### Do:
```tsx
const SupportCaseCard: React.FC<SupportCaseCardProps> = ({
  caseId,
  title,
  status
}) => {
  const [isExpanded, setIsExpanded] = useState(false);
  return <div>...</div>;
};
```
""" ;
    cso:donts """
### Don't:
```tsx
class SupportCaseCard extends React.Component {
  render() {
    return <div>...</div>;
  }
}
```
""" .

###############################################################################
# CODE STANDARDS - TYPESCRIPT STANDARDS
###############################################################################

csoi:TypeScriptStrongTyping a cso:CodeStandard ;
    cso:name "typescript/typing/strong-typing" ;
    cso:hasCategory csoi:TypeScriptCategory ;
    cso:description """
## Strong Typing
Always provide explicit types for component props, state, and function parameters.
Avoid using `any` type.
""" ;
    cso:dos """
### Do:
```tsx
interface SupportCaseCardProps {
  caseId: string;
  title: string;
  status: 'open' | 'pending' | 'resolved' | 'closed';
  priority: 'low' | 'medium' | 'high' | 'critical';
  assignee?: User;
  createdDate: Date;
  lastUpdated: Date;
  variant?: 'compact' | 'standard' | 'expanded';
}
```
""" ;
    cso:donts """
### Don't:
```tsx
interface SupportCaseCardProps {
  caseId: any;
  title: any;
  status: string;
  data: any;
}
```
""" .

csoi:TypeScriptEnums a cso:CodeStandard ;
    cso:name "typescript/typing/enums" ;
    cso:hasCategory csoi:TypeScriptCategory ;
    cso:description """
## Use String Literal Types or Const Assertions
Prefer string literal types or const assertions over enums for better tree-shaking and type inference.
""" ;
    cso:dos """
### Do:
```tsx
export const CaseStatus = {
  OPEN: 'open',
  PENDING: 'pending',
  RESOLVED: 'resolved',
  CLOSED: 'closed'
} as const;

type CaseStatus = typeof CaseStatus[keyof typeof CaseStatus];
```
""" ;
    cso:donts """
### Don't:
```tsx
enum CaseStatus {
  OPEN = 'open',
  PENDING = 'pending',
  RESOLVED = 'resolved',
  CLOSED = 'closed'
}
```
""" .

###############################################################################
# CODE STANDARDS - TESTING STANDARDS
