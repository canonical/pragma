csoi:StylingCSSModules a cso:CodeStandard ;
    cso:name "styling/css/modules" ;
    cso:hasCategory csoi:StylingCategory ;
    cso:description """
## CSS Modules or CSS-in-JS
Use CSS Modules or CSS-in-JS for component styling to ensure style encapsulation.
""" ;
    cso:dos """
### Do:
```css
/* SupportCaseCard.module.css */
.card {
  border: 1px solid var(--color-border);
  border-radius: var(--radius-small);
  padding: var(--spacing-medium);
}

.card--expanded {
  box-shadow: var(--shadow-large);
}
```
""" ;
    cso:donts """
### Don't:
- Don't use global CSS classes without scoping
- Don't use inline styles for complex styling
- Don't hardcode color values
""" .

csoi:StylingBEMNaming a cso:CodeStandard ;
    cso:name "styling/naming/bem" ;
    cso:hasCategory csoi:StylingCategory ;
    cso:extends csoi:StylingCSSModules ;
    cso:description """
## BEM Naming Convention
Use BEM (Block Element Modifier) naming convention for CSS classes.
""" ;
    cso:dos """
### Do:
```css
.support-case-card { }
.support-case-card__header { }
.support-case-card__title { }
.support-case-card--expanded { }
.support-case-card--priority-high { }
```
""" ;
    cso:donts """
### Don't:
```css
.card-header-title { }
.cardHeader { }
.red-card { }
```
""" .

