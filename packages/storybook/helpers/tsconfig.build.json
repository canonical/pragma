{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/esm",
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/stories",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/**/*.tests.ts",
    "src/**/*.tests.tsx"
  ]
}
