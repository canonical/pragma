{
  "name": "@canonical/storybook-addon-shell-theme",
  "description": "Storybook addon that applies Canonical shell theme with light and dark modes.",
  "version": "0.13.0-experimental.0",
  "author": {
    "email": "webteam@canonical.com",
    "name": "Canonical Webteam"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/canonical/pragma"
  },
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/canonical/pragma/issues"
  },
  "homepage": "https://github.com/canonical/pragma/tree/main/packages/storybook/addon-canonical-shell-theme#readme",
  "keywords": [
    "storybook-addon",
    "storybook-theme",
    "canonical"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": "./dist/esm/index.js",
    "./preview": "./dist/esm/preview.js",
    "./manager": "./dist/esm/manager.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "vitest run",
    "build": "bun run build:vite && bun run build:types",
    "build:vite": "vite build",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:tsc": "tsc -p tsconfig.build.json",
    "build:all": "bun run build",
    "check": "bun run check:biome && bun run check:ts && bun run check:webarchitect",
    "check:fix": "bun run check:biome:fix && bun run check:ts",
    "check:biome": "biome check",
    "check:biome:fix": "biome check --write",
    "check:ts": "tsc --noEmit",
    "check:webarchitect": "webarchitect library"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@canonical/biome-config": "^0.12.0",
    "@canonical/typescript-config": "^0.12.0",
    "@canonical/webarchitect": "^0.12.0",
    "copyfiles": "^2.4.1",
    "storybook": "^10.2.8",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "storybook": "^10.1.11"
  },
  "storybook": {
    "displayName": "DS Theme",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "web-components",
      "ember",
      "html",
      "svelte",
      "preact",
      "react-native"
    ]
  }
}
