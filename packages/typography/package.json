{
  "name": "@canonical/typography",
  "module": "index.ts",
  "type": "module",
  "version": "0.15.0",
  "main": "src/index.css",
  "bin": {
    "extractFontData": "./src/extractFontData.ts"
  },
  "scripts": {
    "extractFontData": "bun run ./src/extractFontData.ts",
    "check": "bun run check:biome && bun run check:ts",
    "check:fix": "bun run check:biome:fix && bun run check:ts",
    "check:biome": "biome check",
    "check:biome:fix": "biome check --write",
    "check:ts": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@canonical/biome-config": "^0.15.0",
    "@canonical/typescript-config": "^0.15.0",
    "@types/bun": "^1.3.8",
    "@types/node": "^24.10.13",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "opentype.js": "^1.3.4"
  }
}
