{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/esm",
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": false,
    "types": ["node", "react", "react-dom"]
  },
  "exclude": [
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/**/*.tests.ts",
    "src/**/*.tests.tsx",
    "vite.config.ts",
    "vitest.setup.ts",
    "vitest.config.ts",
    ".storybook"
  ]
}
