{
  "name": "@canonical/storybook-config",
  "version": "0.12.0",
  "type": "module",
  "description": "Canonical's standard Storybook configuration factory",
  "main": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/esm/index.js"
    },
    "./preview": {
      "types": "./dist/types/previewConfig.d.ts",
      "default": "./dist/esm/previewConfig.js"
    }
  },
  "author": {
    "email": "webteam@canonical.com",
    "name": "Canonical Webteam"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/canonical/ds25"
  },
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/canonical/ds25/issues"
  },
  "homepage": "https://github.com/canonical/ds25#readme",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:all": "tsc -p tsconfig.build.json",
    "check": "bun run check:biome",
    "check:fix": "bun run check:biome:fix && bun run check:ts",
    "check:biome": "biome check",
    "check:biome:fix": "biome check --write",
    "check:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@canonical/ds-assets": "^0.12.0",
    "@canonical/storybook-addon-baseline-grid": "^0.12.0",
    "@canonical/storybook-addon-shell-theme": "^0.12.0",
    "@chromatic-com/storybook": "^5.0.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@storybook/svelte-vite": "^10.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@canonical/biome-config": "^0.12.0",
    "@canonical/typescript-config-react": "^0.12.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
